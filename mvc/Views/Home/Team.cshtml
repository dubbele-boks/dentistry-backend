@{
    ViewData["Title"] = "Team";
    List<dynamic> dentists = ViewBag.dentists;
    List<dynamic> assistants = ViewBag.assistants;
}

<div class="container">
    @for (var index = 0; index < dentists.Count; index++)
    {
        <div class="row">
            @if (index % 2 == 0)
            {

                <img class="col-6" href="https://chalfontdentist.co.uk/wp-content/uploads/2023/03/DSD1355-1024x683.jpg" />
                <p>
                    @dentists[index].name
                </p>
            }
            else
            {
                <p>
                    @dentists[index].name
                </p>
                <img class="col-6" href="https://chalfontdentist.co.uk/wp-content/uploads/2023/03/DSD1355-1024x683.jpg" />
            }
        </div>
    }

    @for (var index = 0; index < assistants.Count; index++)
    {
        <div class="row">
            @if (index % 2 == 0)
            {

                <img class="col-6" href="https://chalfontdentist.co.uk/wp-content/uploads/2023/03/DSD1355-1024x683.jpg" />
                <p>
                    @assistants[index].name
                </p>
            }
            else
            {
            <p>
                @assistants[index].name
            </p>
                <img class="col-6" href="https://chalfontdentist.co.uk/wp-content/uploads/2023/03/DSD1355-1024x683.jpg" />
            }
        </div>
    }
</div>

