@model mvc.Models.Dentist

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Dentist</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDentist">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="FirstName" class="form-control" autocomplete="firstname" aria-required="true" placeholder="John" />
                <label asp-for="FirstName">Firstname</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="MiddleName" class="form-control" autocomplete="MiddleName" aria-required="true" placeholder="John" />
                <label asp-for="MiddleName">MiddleName</label>
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" autocomplete="LastName" aria-required="true" placeholder="John" />
                <label asp-for="LastName">LastName</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="PhoneNumber" class="form-control" autocomplete="PhoneNumber" aria-required="true" placeholder="06 12345678" />
                <label asp-for="PhoneNumber">PhoneNumber</label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="BirthDate" type="date" class="form-control" autocomplete="BirthDate" aria-required="true" placeholder="24/07/2003" />
                <label asp-for="BirthDate">BirthDate</label>
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="PasswordHash" type="password" class="form-control" autocomplete="Password" aria-required="true" placeholder="24/07/2003" />
                <label asp-for="PasswordHash">Password</label>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
