@{
}


<table class="table">
    <thead>
        <tr>
            <th>
                Klant
            </th>
            <th>
                Datum
            </th>
            <th>
                Kamer
            </th>
            <th>
                acties
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in ViewBag.appointments) { 
            <tr>
                <td>
                    @(item.Appointment.Patient.FirstName + " " + item.Appointment.Patient.MiddleName + " " + item.Appointment.Patient.LastName)
                </td>
                <td>
                    @item.Appointment.Date
                </td>
                <td>
                    @item.Appointment.Room.Roomnumber
                </td>
                <td>
                    <button class="link" data-id="@item.Appointment.Id">Notitie linken</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<dialog id="formfield">
    <form asp-action="LinkNote" asp-controller="Appointment" method="post" class="container-fluid">
        <h1>Notitie maken</h1>
        <hr />
        <div class="row">
            <input type="hidden" id="appointment" name="AppointmentId" value="" />
            <div class="col-lg-12 mb-2">
                <div class="form-group">
                    <label class="control-label">Titel</label>
                    <input class="form-control" type="text" name="title" value="" />
                </div>
            </div>
            <div class="col-lg-12 mb-2">
                <div class="form-group">
                    <label class="control-label">Beschrijving</label>
                    <input class="form-control" type="text" name="description" value="" />
                </div>
            </div>
            <hr />
            <div class="row justify-content-end">
                <div class="col-lg-4 d-flex">
                    <button id="close" class="btn btn-danger me-2">Close</button>
                    <button class="btn btn-primary">Save</button>
                </div>
            </div>
    </form>
</dialog>



<script defer>
    const link = document.getElementsByClassName("link");
    const dialog = document.querySelector("dialog");

    for (let i = 0; i < link.length; i++) {
        link[i].addEventListener("click", (el) => {
            document.getElementById("appointment").value = el.target.dataset["id"];
            dialog.showModal();
        });
    }


    document.getElementById("close").addEventListener("click", (ev) => {
        ev.preventDefault();
        dialog.close();
    })
</script>
